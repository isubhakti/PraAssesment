<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"

        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".SegitigaSiku">

<androidx.constraintlayout.widget.ConstraintLayout  android:layout_width="match_parent"
                                                    android:layout_height="match_parent">
    <!-- TODO: Update blank fragment layout -->
    <EditText
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:id="@+id/AlasSegitiga"
            android:hint="Alas"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"/>

    <EditText
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:id="@+id/TinggiSegitiga"
            android:hint="Tinggi"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/AlasSegitiga"
            android:layout_marginTop="16dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hitung"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/TinggiSegitiga"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="44dp"
            android:layout_marginStart="44dp"
            android:id="@+id/HitungNilaiSegitiga"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/LuasSegitiga"
            android:text="Luas = "
            app:layout_constraintTop_toBottomOf="@+id/HitungNilaiSegitiga"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="48dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="8dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/KelilingSegitiga"
            android:text="Keliling = "
            app:layout_constraintTop_toBottomOf="@+id/LuasSegitiga"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="48dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="8dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/NilaiLuasSegitiga"
            android:text="0"
            app:layout_constraintTop_toBottomOf="@+id/HitungNilaiSegitiga"
            app:layout_constraintStart_toEndOf="@+id/LuasSegitiga"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/NilaiKelilingSegitiga"
            android:text="0"
            app:layout_constraintTop_toBottomOf="@+id/LuasSegitiga"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@+id/KelilingSegitiga"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/KelilingSegitiga"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="44dp"
            android:layout_marginStart="44dp"
            android:id="@+id/ShareButtonSegitiga"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>